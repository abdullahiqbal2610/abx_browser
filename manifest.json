{
  "manifest_version": 3,
  "name": "ABX-One",
  "version": "1.0.0",
  "description": "Transform Chrome into a stunning xAI-themed experience with mind-blowing animations",
  "permissions": [
    "bookmarks",
    "history",
    "tabs",
    "storage",
    "activeTab",
    "topSites"
  ],
  "chrome_url_overrides": {
    "newtab": "newtab.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": [
    "https://www.alphavantage.co/*",
    "https://suggestqueries.google.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "ABX-One Extension Settings",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
